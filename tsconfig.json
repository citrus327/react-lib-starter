{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "outDir": "./dist",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "isolatedModules": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "pretty": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": false
  }
}